### ZSH configuration ###
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

source ${HOME}/.config/zsh/env.zsh || echo "No env file found"
source ${HOME}/.config/zsh/aliases.zsh || echo "No aliases file found"
source ${HOME}/.config/zsh/cloud.zsh || echo "No cloud file found"
source ${HOME}/.config/zsh/system.zsh || echo "No system file found"
source ${HOME}/.config/zsh/fzf.zsh || echo "No fzf file found"
source ${HOME}/.config/zsh/morning.zsh
source ${HOME}/.config/zsh/directories.zsh


ZIM_CONFIG_FILE=${HOME}/.config/zsh/zimrc
ZIM_HOME=${HOME}/.config/zim
######## DIRENV ########
eval "$(direnv hook zsh)"

#### HELM ####
source <(helm completion zsh)

#### OH-MY-POSH ####
if [ "$TERM_PROGRAM" != "Apple_Terminal" ]; then
  eval "$(oh-my-posh init zsh --config ${HOME}/.config/oh-my-posh/theme.omp.toml)"
fi
